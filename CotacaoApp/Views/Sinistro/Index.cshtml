@model IEnumerable<CotacaoApp.Models.Sinistro>

@{
    ViewBag.Title = "Sinistros";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo Sinistro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DescricaoSinistro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataSinistro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SituacaoSinistro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DescricaoSinistro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataSinistro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SituacaoSinistro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detailhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
