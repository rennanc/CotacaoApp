
@{
    ViewBag.Title = "Login";
    var erro = ViewBag.Error;
}

<h2>Login</h2>

@if (erro != null)
{
    <div class="has-warning" style="background-color: #D48E8E; width: 50%">@erro</div>
}
<form action="/Login/Autenticar" method="post">
    @Html.AntiForgeryToken()
    <label for="login">Login:</label>
    <input type="text" name="login" id="login" class="form-control" />

    <label for="senha">Senha:</label>
    <input type="password" name="senha" id="senha" class="form-control" />
    <br/>
    <input type="submit" value="Autenticar" class="form-control" />
</form>

<a href="/Login/RecuperaSenha">Esqueci Minha Senha</a>

