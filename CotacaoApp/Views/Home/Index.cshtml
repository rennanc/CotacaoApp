@model CotacaoApp.Models.Proposta

@{
    ViewBag.Title = "Pagina Inicial";
}

@*<div class="jumbotron">
    <h1>Bem-Vindo</h1>
</div>*@

<div class="container">
    <div class="row homeContent">
        <div class="col-lg-7"></div>
        <div class="col-lg-5">
            <div class="col-xs-12" style="height:50px;"></div>
            @using (Html.BeginForm("Passo1", "Proposta", FormMethod.Post))
            {
            @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <div class="col-md-12 form-group">
                        <select class="form-control" name="NomeMarca" id="NomeMarca">
                            <option selected>Escolha a marca do Seu Carro</option>
                            <option>Fiat</option>
                        </select>
                    </div>
                    <div class="col-md-12 form-group">
                        <select class="form-control" name="DataFabricacao" id="DataFabricacao">
                            <option selected>Ano de Fabricação</option>
                            <option>2014</option>
                            <option>2015</option>
                        </select>
                    </div>
                    <div class="col-md-12 form-group">
                        <select class="form-control" name="DataVeiculo" id="DataVeiculo">
                            <option selected>Ano do Modelo</option>
                            <option>2014</option>
                            <option>2015</option>
                        </select>
                    </div>
                    <div class="col-md-12 form-group">
                        <input class="form-control" name="NomeVeiculo" type="text" placeholder="Ex: Palio" />
                    </div>
                    <div class="col-md-12 form-group">
                        <input class="form-control btn btn-primary" type="submit" value="Simule Grátis" />
                    </div>
               </div>
              }
        </div>
    </div>


</div>





<div class="row">
    <div class="col-md-4">
        <h1>Página Inicial da App</h1>
    </div>
</div>