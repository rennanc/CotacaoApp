@model IEnumerable<CotacaoApp.Models.Apolice>

@{
    ViewBag.Title = "Apólice";
}

<h2>Apólice</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Veículo")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Proposta.Segurado.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comissao.ValorPremioLiquido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seguradora.NomeSeguradora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorContrato)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Proposta.NomeVeiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proposta.Segurado.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comissao.ValorPremioLiquido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seguradora.NomeSeguradora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorContrato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Alterar/Criar Endosso", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
