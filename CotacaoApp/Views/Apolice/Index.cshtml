@model IEnumerable<CotacaoApp.Models.Apolice>

@{
    ViewBag.Title = "Apólice";
}

<h2>Apólice</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodigoProposta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodigoComissao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodigoSeguradora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorContrato)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoProposta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoComissao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoSeguradora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorContrato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
