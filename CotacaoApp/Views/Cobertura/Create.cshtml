@model CotacaoApp.Models.Cobertura

@{
    ViewBag.Title = "Nova Cobertura";
}

<h2>Criar</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Formulario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.NomeCobertura, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomeCobertura, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomeCobertura, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DescricaoCobertura, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.DescricaoCobertura,20,100, new { htmlAttributes = new { @class = "form-control textbox" } })
                @Html.ValidationMessageFor(model => model.DescricaoCobertura, "", new { @class = "text-danger" })
            </div>
        </div>

        <div><input type="submit" value="Cadastrar" class = "form-control" /></div>

    </div>
}

<div>
    @Html.ActionLink("Voltar para a Lista", "Index")
</div>
