@model IEnumerable<CotacaoApp.Models.Endosso>

@{
    ViewBag.Title = "Endosso";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo Endosso", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodApolice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataEndosso)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodApolice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEndosso)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
