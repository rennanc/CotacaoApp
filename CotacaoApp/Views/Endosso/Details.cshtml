@model CotacaoApp.Models.Endosso
@using CotacaoApp.Models

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>Endosso</h4>
    <hr />

    @if (Model.Apolice != null)
    {
        @Html.Partial("_Apolice", (Apolice)Model.Apolice)
        @Html.HiddenFor(model => model.CodApolice, new { id = "Apolice.CodApolice", Value = @Model.Apolice.Id })

    }
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CodApolice)
        </dt>

        <dd>
            <a href="/Apolice/Details/@Model.CodApolice">Ver Apolice Atual</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CodApoliceAntigo)
        </dt>

        <dd>
            <a href="/Apolice/Details/@Model.CodApoliceAntigo">Ver Apolice Anterior</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataEndosso)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataEndosso)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Editar", new { id = Model.Id }) |
    @Html.ActionLink("Voltar para a Lista", "Index")
</p>
